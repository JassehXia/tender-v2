generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id               String            @id @default(cuid())
  name             String?
  email            String            @unique
  clerkId          String            @unique // if youâ€™re using Clerk auth
  createdAt        DateTime          @default(now())
  foods            Food[]
  mlModels         MLModel[]
  foodInteractions FoodInteraction[]
}

model Food {
  id               String            @id @default(cuid())
  name             String
  tags             String[]
  imageUrl         String?
  user             User?             @relation(fields: [userId], references: [id])
  userId           String?
  createdAt        DateTime          @default(now())
  foodInteractions FoodInteraction[]
}

model MLModel {
  id          String   @id @default(cuid())
  name        String
  description String?
  createdAt   DateTime @default(now())
  user        User?    @relation(fields: [userId], references: [id])
  userId      String?
}

model FoodInteraction {
  id        String          @id @default(cuid())
  userId    String
  foodId    String
  action    InteractionType
  createdAt DateTime        @default(now())

  user User @relation(fields: [userId], references: [id])
  food Food @relation(fields: [foodId], references: [id])

  @@index([userId])
  @@index([foodId])
}

enum InteractionType {
  LIKE
  DISLIKE
  SAVE
  SKIP
}
